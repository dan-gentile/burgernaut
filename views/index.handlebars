<div class="logo-box">
    <img class="logo" src="../assets/images/logo.png" alt="astronaut eating a burger" width="360px" height="360px">
</div>

{{#if burger}}
<div class="queue-headline-box">
    <h3>BURGER QUEUE</h3>
</div>

<div class="queue">

    <div class="queue-box">
        <ul>
            {{#each burger}} {{#unless eaten}}
            <li class="queue-item">
                <img class="icon" src="../assets/images/burgerFull.png" alt="burger icon" width="38px" height="45px">
                <h4>{{name}}</h4>
                <button class="change-eaten" data-id="{{id}}" data-neweat="true">EAT ME</button>
            </li>
            {{/unless}} {{/each}}
        </ul>
    </div>

</div>
{{/if}} {{#if burger}}
<div class="spent-headline-box">
    <h3>SPENT FUEL</h3>
</div>

<div class="spent">

    <div class="spent-box">

        <ul>
            {{#each burger}} {{#if eaten}}
            <li class="spent-item">
                <img class="icon" src="../assets/images/burgerEaten.png" alt="burger eaten icon" width="43px" height="50px">
                <h4>{{name}}</h4>
                <i class="fad fa-dumpster delete" data-id="{{id}}"></i>
            </li>
            {{/if}} {{/each}}
        </ul>
    </div>
</div>

{{/if}}


<div class="create">
    <div class="create-box">
        <h3>EAT A BURGER!</h3>
        <form class="create-form">
            <div class="form-group">
                <input type="text" id="burger" name="name" placeholder="NAME A BURGER" onkeyup="this.value = this.value.toUpperCase();">
            </div>
            <button id="submit" type="submit">Submit</button>
        </form>
    </div>
</div>

